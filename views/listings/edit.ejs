<%= layout("/layouts/boilerplate")%>
    <h3>Edit your listing </h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT">

        <div class="mb-3">
            <lable class="form-label" for="title">Title</lable>
           <input class="form-control" name="listing[title]"  value="<%=listing.title %>"  type="text" />
           </div>
           
           <div class="mb-3">
    <lable class="form-label " for="description">Description</lable>
           <textarea class="form-control" name="listing[description]"  ><%=listing.description%></textarea>
          </div> 
    
    
          <div class="mb-3">
           <lable class="form-label" for="image" >Image URL</lable>
           <input class="form-control" name="listing[image]"  value="<%=listing.image%>"  type="text" />
          </div>
          
          <div class="row ">
           <div class="mb-3 col-md-4">
           <lable class="form-label" for="price">price</lable>
           <input class="form-control" name="listing[price]"   value="<%=listing.price%>" type="number" />
           </div>
    
    
           <div class="mb-3 col-md-8">
           <lable class="form-label" for="country">Country</lable>
           <input class="form-control" name="listing[country]"  value="<%=listing.country%>" type="text" />
           </div>
    </div>
    
           <div class="mb-3">
           <lable class="form-label" for="location">Location</lable>
           <input class="form-control" name="listing[location]"  value="<%=listing.location %>"  type="text" />
          </div>
    


          <button class="btn btn-dark add-btn"> Edit </button>

    </form>

   