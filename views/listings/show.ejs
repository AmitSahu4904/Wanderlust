<%= layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-3 mt-3">
    <h3>Listing Detail :</h3></div>
    <div class="card col-6 offset-3 card-show" >
        <img src="<%= listing.image%>" class="card-img-top show-img" alt="show-img">
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b> <br>
        <%= listing.description %> <br>
        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>

    
    </p>
        </div>
      </div>
    </div>

    
<br>
<a   class="btn btn-dark col-1 offset-3" href="/listings/<%= listing._id %>/edit">Edit</a>
<br><br>
<form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark add-btn col-1 offset-3">DELETE </button>
</form>





